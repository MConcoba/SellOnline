<body>
  <header>

      <div style="text-align: center">
          <h1>SU MEJOR OPCION EN ROPA INFANTIL</h1>
          <p class="address">1ra calle 6-204 zona 1 Guatemala</p>
      </div>
      <div >
          <p class="serie">Serie {{billSerie}}</p>
          <p class="no-bill">{{no}}</p>
          <p class="no-bill"></p>
         
      </div>
  </header>
  <section>
    <p>Fecha: {{formato date "DD - MMM - YYYY"}}</p>
      <div style="display: flex; margin: 0">
          <p style="margin: 0 0 0 0">Nombre: {{user.name}} {{user.lastName}}</p>
          
          <p style="margin: 0 0 0 16px"></p>
          <p></p>
      </div>

  </section>
  <table>
      <tr>
        <th class="no">No.</th>
          <th class="concept">Producto</th>
          <th class="cuantity"> Cantidad</th>
          <th class="priceU"> Precio-Unitario </th>
          <th class="value"> Sub-Total</th>
      </tr>
         
         {{#each products}}
      <tr class="product-row">
          
          <td>1</td>
          <td>{{this.product}}</td>
          <td>{{this.amount}}</td>
          <td>{{this.priceUnitary}}</td>
          <td>Q.{{this.subTotal}}.ºº</td>
        </tr>
    {{/each}}

        <tr class="product-row">
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
     
      
 
  
      
    
      <tr class="total">
          <td colspan="4" class="title">Total</td>
          <td class="price">Q.{{total}}.ºº</td>
      </tr>
  
  
   </table>
</body>

